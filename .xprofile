#!/bin/sh

# This file runs when a DM logs you into a graphical session.
# If you use startx/xinit like a Chad, this file will also be sourced.

# Set Caps to Mod/Escape
setxkbmap -option caps:swapescape -layout br && killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape' &
# Properties button extra Mod/Escape
xmodmap -e 'keycode 135 = Super_R' &

setbg &     # set the background with the `setbg` script
xcompmgr &    # xcompmgr for transparency
dunst &     # dunst for notifications
sxhkd &     # Bind keys with sxhkd
xset r rate 300 50 &  # Speed xrate up
unclutter &   # Remove mouse when idle
mpd-module-update & # Check for when to update the mpd module

# TODO: Stop ignoring errors output
dwmstatus 2>&1 /dev/null & # suckless status bar

